{{games}}
<form action="/challenge/create" method="POST">
  <label> league
    <input type="text" name="league" value="{{league}}">
  </label>
  <label> game
      <select name="game">
          {{#each games}}
              <option value="{{id}}">{{name}}</option>
          {{/each}}
      </select>
  </label>
  <label> contenders
      <select name="users" multiple>
          {{#each users}}
              <option value="{{id}}">{{username}}</option>
          {{/each}}
      </select>
  </label>
  <label>stake
    <input type="Number" name="stake">
  </label>

  <button type="submit">Create Your Challenge</button>
</form>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}


